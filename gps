# 필요 라이브러리 설치
Sudo apt-get install python-pip 
Sudo pip install pynmea2 
Sudo apt-get install gpsd gpsd-clients python-헨 minicom

#cmdline.txt 파일 수정
Sudo nano /boot/cmdline.txt
Dwc_otg.lpm_enable=0 console=tty1 root=/dev/mmcblk0p2 rootfstype=ext4 elevator=deadline fsck.repair=yes rootwait quiet splash plymouth.ignore-serial-consoles 

#config.txt 파일 수정
sudo nano /boot/config.txt
dtparam=spi=on
dtoverlay=pi3-disable-bt 
core_freq=250 enable_uart=1 force_turbo=1 init_uart_baud=9600

#재부팅
sudo reboot now

#재부팅 한 후 아래 명령어들 입력
stty -F /dev/ttyAMA0 9600 
sudo killall gpsd 
sudo nano /etc/default/gpsd

# /etc/default/gpsd와 시리얼 포트를 디바이스에 추가 이후 소프트웨어 재시작
DEVICES="/dev/ttyAMA0“

sudo systemctl enable gpsd.socket 
sudo systemctl start gpsd.socket 
sudo cgps –s

# 다음 명령어를 입력하여 제대로 작동되는지 확인할 수 있다.
cat /dev/ttyAMA0 
or 
cgps -s

import serial 
import pynmea2 
def parseGPS(str): 
    if str.find('GGA') > 0: 
        msg = pynmea2.parse(str) 
        print "Timestamp: %s -- Lat: %s %s -- Lon: %s %s -- Altitude: 
%s %s" % 
(msg.timestamp,msg.lat,msg.lat_dir,msg.lon,msg.lon_dir,msg.altitude,m sg.altitude_units) 
serialPort = serial.Serial("/dev/ttyAMA0", 9600, timeout=0.5) 
while True: 
    str = serialPort.readline() 
    parseGPS(str)
